{
  "manifest_version": 3,
  "name": "AI Cross Checker",
  "version": "1.1.0",
  "description": "GPT와 Gemini에 동시에 질문하고 답변을 비교하는 확장 프로그램",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://gemini.google.com/*"
  ],
  "action": {
    "default_title": "AI Cross Checker 열기",
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content-chatgpt.js"]
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content-gemini.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
